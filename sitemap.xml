---
layout: null
permalink: /sitemap.xml
sitemap:
  exclude: 'yes'
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9 http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd" xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">

{% for page in site.html_pages %}
  {% if page.url contains "sitemap" or page.url contains "feed" or page.url contains "index.html" %}
    {% continue %}
  {% endif %}
  <url>
    <loc>{{ site.url }}{{ page.url }}</loc>
    {% if page.last_modified_at %}
    <lastmod>{{ page.last_modified_at | date_to_xmlschema }}</lastmod>
    {% else %}
    <lastmod>{{ page.date | default: site.time | date_to_xmlschema }}</lastmod>
    {% endif %}
  </url>
{% endfor %}

{% for collection in site.collections %}
  {% unless collection.output == false %}
    {% for item in collection.docs %}
    <url>
      <loc>{{ site.url }}{{ item.url }}</loc>
      {% if item.last_modified_at %}
      <lastmod>{{ item.last_modified_at | date_to_xmlschema }}</lastmod>
      {% else %}
      <lastmod>{{ item.date | default: site.time | date_to_xmlschema }}</lastmod>
      {% endif %}
    </url>
    {% endfor %}
  {% endunless %}
{% endfor %}

</urlset>
