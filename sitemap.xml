---
layout: null
# Exclui o próprio sitemap de ser listado dentro dele mesmo
sitemap: exclude: true 
---


<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">

{% comment %}
    Loop 1: Processa todos os posts (site.posts)
{% endcomment %}
{% for item in site.posts %}
  {% unless item.sitemap.exclude %}
    {% assign current_url = item.url | remove: "index.html" %}
    <url>
      <loc>{{ site.url }}{{ current_url }}</loc>

      {% comment %} Prioridade compactada para evitar problema de espaço em branco {% endcomment %}
      <priority>{% if current_url == "/" %}1.0{% elsif current_url contains '/ferramentas/' and current_url != '/ferramentas/' %}0.9{% elsif current_url contains '/artigos-linux-iniciantes/' or current_url contains '/guias-avancados/' %}0.9{% elsif current_url contains '/wallpaper/' and current_url != '/wallpapers/' %}0.3{% elsif current_url contains '/jogo-' or current_url contains '/jogo/' %}0.3{% elsif current_url == '/ferramentas/' or current_url == '/wallpapers/' or current_url contains '/distros/' or current_url contains '/indice-artigos-linux/' %}0.7{% else %}0.5{% endif %}</priority>
      
      {% comment %} Datas consolidadas {% endcomment %}
      {% if item.last_modified_at %}
        <lastmod>{{ item.last_modified_at | default: site.time | date_to_xmlschema }}</lastmod>
      {% elsif item.date %}
        <lastmod>{{ item.date | date_to_xmlschema }}</lastmod>
      {% endif %}

      <changefreq>monthly</changefreq>
    </url>
  {% endunless %}
{% endfor %}

{% comment %}
    Loop 2: Processa as páginas (site.pages)
{% endcomment %}
{% for item in site.pages %}
  {% comment %}
    Variáveis para simplificar o filtro
  {% endcomment %}
  {% assign current_url = item.url | remove: "index.html" %}
  {% assign is_excluded = item.sitemap.exclude %}
    
  {% comment %}
    EXCLUI: Arquivos que terminam em .xml, pastas de paginação (/pageN), e páginas marcadas com sitemap: exclude: true
  {% endcomment %}
  {% unless current_url contains '.xml' or current_url contains '/page' or is_excluded %}

    <url>
      <loc>{{ site.url }}{{ current_url }}</loc>
      
      {% comment %} Prioridade compactada para evitar problema de espaço em branco {% endcomment %}
      <priority>{% if current_url == "/" %}1.0{% elsif current_url contains '/ferramentas/' and current_url != '/ferramentas/' %}0.9{% elsif current_url contains '/artigos-linux-iniciantes/' or current_url contains '/guias-avancados/' %}0.9{% elsif current_url contains '/wallpaper/' and current_url != '/wallpapers/' %}0.3{% elsif current_url contains '/jogo-' or current_url contains '/jogo/' %}0.3{% elsif current_url == '/ferramentas/' or current_url == '/wallpapers/' or current_url contains '/distros/' or current_url contains '/indice-artigos-linux/' %}0.7{% else %}0.5{% endif %}</priority>
      
      {% comment %} Datas consolidadas {% endcomment %}
      {% if item.last_modified_at %}
        <lastmod>{{ item.last_modified_at | default: site.time | date_to_xmlschema }}</lastmod>
      {% elsif item.date %}
        <lastmod>{{ item.date | date_to_xmlschema }}</lastmod>
      {% endif %}

      <changefreq>monthly</changefreq>
    </url>

  {% endunless %}

{% endfor %}

</urlset>







