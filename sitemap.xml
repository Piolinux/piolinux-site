---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9
        http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd">

  <!-- Página principal -->
  <url>
    <loc>{{ "/" | absolute_url }}</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>daily</changefreq>
    <priority>1.0</priority>
  </url>

  <!-- Páginas estáticas (.html) -->
  {% for page in site.html_pages %}
    {% assign skip = false %}

    <!-- Exclui páginas técnicas -->
    {% if page.name == "404.html" or page.name == "sitemap.xml" or page.name == "feed.xml" or page.name == "robots.txt" %}
      {% assign skip = true %}
    {% endif %}

    <!-- Exclui páginas paginadas do blog (ex: /page2/, /page3/) -->
    {% if page.url contains "/page/" %}
      {% assign skip = true %}
    {% endif %}

    <!-- Exclui URLs que terminam com número puro (ex: /page2) -->
    {% assign url_parts = page.url | split: '/' %}
    {% assign last_part = url_parts | last %}
    {% if last_part != "" and last_part != "index.html" %}
      {% assign is_number = last_part | integer %}
      {% if is_number != 0 or last_part == "0" %}
        {% assign skip = true %}
      {% endif %}
    {% endif %}

    {% unless skip %}
      {% assign clean_url = page.url | remove: "index.html" | append: "/" | replace: "//", "/" %}
      {% if clean_url == "//" %}{% assign clean_url = "/" %}{% endif %}

      <url>
        <loc>{{ clean_url | absolute_url }}</loc>
        <lastmod>
          {% if page.date %}
            {{ page.date | date_to_xmlschema }}
          {% else %}
            {{ site.time | date_to_xmlschema }}
          {% endif %}
        </lastmod>
        <changefreq>
          {% if clean_url == "/politica-de-privacidade/" or clean_url == "/termos-de-uso/" %}
            yearly
          {% else %}
            weekly
          {% endif %}
        </changefreq>
        <priority>
          {% if clean_url == "/politica-de-privacidade/" or clean_url == "/termos-de-uso/" %}
            0.3
          {% elsif clean_url contains "/wallpaper/" or clean_url contains "/docs/" %}
            0.6
          {% else %}
            0.8
          {% endif %}
        </priority>
      </url>
    {% endunless %}
  {% endfor %}

  <!-- Posts do blog -->
  {% for post in site.posts %}
    <url>
      <loc>{{ post.url | absolute_url }}</loc>
      <lastmod>{{ post.date | date_to_xmlschema }}</lastmod>
      <changefreq>monthly</changefreq>
      <priority>0.7</priority>
    </url>
  {% endfor %}

  <!-- Coleção: wallpapers (se existir) -->
  {% for item in site.wallpapers %}
    <url>
      <loc>{{ item.url | absolute_url }}</loc>
      <lastmod>
        {% if item.date %}
          {{ item.date | date_to_xmlschema }}
        {% else %}
          {{ site.time | date_to_xmlschema }}
        {% endif %}
      </lastmod>
      <changefreq>monthly</changefreq>
      <priority>0.6</priority>
    </url>
  {% endfor %}

  <!-- Coleção: docs (se existir) -->
  {% for item in site.docs %}
    <url>
      <loc>{{ item.url | absolute_url }}</loc>
      <lastmod>
        {% if item.date %}
          {{ item.date | date_to_xmlschema }}
        {% else %}
          {{ site.time | date_to_xmlschema }}
        {% endif %}
      </lastmod>
      <changefreq>monthly</changefreq>
      <priority>0.6</priority>
    </url>
  {% endfor %}

</urlset>
