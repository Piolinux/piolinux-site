---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.sitemaps.org/schemas/sitemap/0.9
        http://www.sitemaps.org/schemas/sitemap/0.9/sitemap.xsd">

  <!-- Página principal -->
  <url>
    <loc>{{ "/" | absolute_url }}</loc>
    <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
    <changefreq>daily</changefreq>
    <priority>1.0</priority>
  </url>

  <!-- Páginas estáticas (.html) -->
  {% for page in site.html_pages %}
    {% unless page.name == "404.html" or page.name == "sitemap.xml" or page.name == "feed.xml" or page.name == "robots.txt" %}
      <url>
        <loc>{{ page.url | remove: "index.html" | append: "/" | replace: "//", "/" | absolute_url }}</loc>
        <lastmod>
          {% if page.date %}
            {{ page.date | date_to_xmlschema }}
          {% else %}
            {{ site.time | date_to_xmlschema }}
          {% endif %}
        </lastmod>
        <changefreq>weekly</changefreq>
        <priority>0.8</priority>
      </url>
    {% endunless %}
  {% endfor %}

  <!-- Posts (artigos do blog) -->
  {% for post in site.posts %}
    <url>
      <loc>{{ post.url | absolute_url }}</loc>
      <lastmod>{{ post.date | date_to_xmlschema }}</lastmod>
      <changefreq>monthly</changefreq>
      <priority>0.7</priority>
    </url>
  {% endfor %}

  <!-- Coleção: wallpapers (se existir e for intencional) -->
  {% for item in site.wallpapers %}
    <url>
      <loc>{{ item.url | absolute_url }}</loc>
      <lastmod>
        {% if item.date %}
          {{ item.date | date_to_xmlschema }}
        {% else %}
          {{ site.time | date_to_xmlschema }}
        {% endif %}
      </lastmod>
      <changefreq>monthly</changefreq>
      <priority>0.6</priority>
    </url>
  {% endfor %}

  <!-- Coleção: docs (comandos, tutoriais, etc.) -->
  {% for item in site.docs %}
    <url>
      <loc>{{ item.url | absolute_url }}</loc>
      <lastmod>
        {% if item.date %}
          {{ item.date | date_to_xmlschema }}
        {% else %}
          {{ site.time | date_to_xmlschema }}
        {% endif %}
      </lastmod>
      <changefreq>monthly</changefreq>
      <priority>0.6</priority>
    </url>
  {% endfor %}

  <!-- ⚠️ NÃO incluímos /page2/, /page3/ etc. do blog principal -->
  <!-- Essas páginas são geradas pelo paginator e devem ter "noindex, follow", mas NÃO estar no sitemap -->

</urlset>


