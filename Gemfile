source "https://rubygems.org"

# Usa Jekyll 4.4+ para compatibilidade com as gems e o novo Sass
gem "jekyll", "~> 4.4" 

# Plugins oficiais do Jekyll
gem "jekyll-feed"
gem "jekyll-sitemap"
gem "jekyll-seo-tag"

# Plugin de Paginação (Certifique-se que está instalado e configurado no _config.yml)
gem "jekyll-paginate" 

# Elimina o aviso do Faraday
gem "faraday-retry"
