source "https://rubygems.org"

# O Jekyll 4.4.1 resolve o problema de dependência do Sass.
# O uso de "~> 4.4" permite as versões 4.4.0 até 4.4.x.
gem "jekyll", "~> 4.4" 

gem "jekyll-feed"
gem "jekyll-sitemap"
gem "jekyll-seo-tag"

# O 'jekyll-paginate' original está desatualizado. Recomenda-se a versão v2, 
# ou remova esta linha se você não estiver usando paginação no seu blog.
# Vou mantê-lo aqui, mas você pode considerar a v2 ou remover.
gem "jekyll-paginate" 

# Elimina o aviso do Faraday (mantido, mas pode não ser mais necessário com Jekyll 4.4)
gem "faraday-retry" 

