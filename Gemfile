source "https://rubygems.org"

# Usa Jekyll 4.4+ para compatibilidade
gem "jekyll", "~> 4.4" 

# Força o uso do Sass Compiler antigo (evita a dependência sass-embedded que quebra no CI)
gem "jekyll-sass-converter", "~> 2.2" 

# Plugins oficiais do Jekyll
gem "jekyll-feed"
gem "jekyll-sitemap"
gem "jekyll-seo-tag"

# Plugin de Paginação 
gem "jekyll-paginate" 

# Elimina o aviso do Faraday
gem "faraday-retry"
